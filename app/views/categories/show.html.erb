<nav>
  <div class="div-category-nav">
    <div>
      <%= link_to '<', entities_path, class: "arrow-back" %>
    </div>
    <div>
      <h1>Entities</h1>
    </div>
    <div>
      <%= button_to 'LOGOUT', destroy_user_session_path, method: :delete, class: "deletes" %>
    </div>
