<p style="color: green"><%= notice %></p>

<div class="entities">
  <div class="transaction">
   <p>Total Transactions</p>
   <p>$<%= @category.entities.sum(:amount) %></p>
  </div>
</div>

<% @entities.each do |entity| %>
  <div class="micons">
    <ul class="single">
      <li>
        <%= @category.icon %>
      </li>
      <li>
        <p><%= entity.name %></p>
        <p><%= entity.created_at.strftime("%Y/%m/%d %I:%M %p") %></p>  
      </li>
      <li>
        <p>$<%= entity.amount %></p>
      </li>
    </ul>
  </div> 
<% end %>

<div class="addnew-cat">
  <%= link_to "ADD NEW TRANSACTION", new_entity_path(category_id: @category.id), class: "addnew-cat2" %>
</div>